@inject WaitService WaitService
Initial content
@await FlushAsync()
@{
    WaitService.WaitForClient();
}
Secondary content
@await FlushAsync()
@{
    WaitService.WaitForClient();
}
@{
    await Html.RenderPartialAsync("_PartialWithFlush");
}
@using (Html.BeginForm())
{
    @Html.TextBox("Name1")
    @await FlushAsync()
    WaitService.WaitForClient();
    @Html.TextBox("Name2")
}
@{
    WaitService.NotifyClient();
}